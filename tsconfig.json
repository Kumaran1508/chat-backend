{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "strict": false,
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*", "app.ts"]
}